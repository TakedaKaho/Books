<h2 class= "NewBook">New book</h2>
<div class ="error_message">
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<ul>
      <li><%= "Error.Title not entered"%></li>
      <li><%= "Error.Body not entered"%></li>
  </ul>
  
<% end %>

</div>

<%= form_with model: @book do |f| %>

<div class="input_box">
 
 <div class="text_title">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class="text_body">
<h4>Body</h4>
<%= f.text_area :body %>
</div>

<%= f.submit 'Creare Book' %>
<% end %>
</div>