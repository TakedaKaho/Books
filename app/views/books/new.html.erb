<h1>New book</h1>
<div class ="error_message">
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<ul>
      <li><%= "Error.Title not entered"%></li>
      <li><%= "Error.Body not entered"%></li>
  </ul>
<% end %>
</div>

<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Creare Book' %>
<% end %>