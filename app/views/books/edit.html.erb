<div class="Editing_Book">
  <h1>Editing Book</h1>
  </div>

<%= form_with model: @book do |f| %>
<div class="edit_box">
  
  <div class ="edit_title">
<h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  
  <div class="edit_body">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  
  <div class="edit_submit">
  <%= f.submit 'Update Book' %>
  </div>
  </div>
  
  <div class="edit_link">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path(@book.id) %>
  </div>
<% end %>

